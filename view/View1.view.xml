<mvc:View
    controllerName="myportifolioapp.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
>
    <Page
        id="page"
    >
        <customHeader>
            <tnt:ToolHeader>
                <Title text="{i18n>title}" />
                <ToolbarSpacer />
                <SearchField width="300px" />
                <ToolbarSpacer />
                <Button icon="sap-icon://dark-mode" press="onChangeTheme"/>
                <Avatar src="./img/avatar.jpg" displaySize="XS" showBorder="true" press="onAvatarPress"/>
            </tnt:ToolHeader>
        </customHeader>
        <content>
            <HBox id="idHBoxMainContent" wrap="Wrap">
                <!-- 
                <GenericTile header="app01" class="sapUiSmallMargin">
                    <TileContent>
                        <Text text="Description"></Text>
                    </TileContent> 
                </GenericTile>
                -->
            </HBox>
        </content>
    </Page>
</mvc:View>
